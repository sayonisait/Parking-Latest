<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
                android:padding="20dp"
              android:background="@drawable/background_blue">

<TextView
        android:textAllCaps="true"
        style="@style/TagTextViewStyle"
        android:gravity="center"
        android:id="@+id/header_text"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent" android:layout_height="wrap_content"
android:text="Vehicle Entry"
          android:textSize="25sp"
        android:paddingBottom="20dp"
/>
<androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        app:layout_constraintGuide_percent=".5"  android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content"/>

            <TextView
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/header_text"
                    app:layout_constraintEnd_toStartOf="@id/guideline"
                    style="@style/TagTextViewStyle"

                    android:layout_width="wrap_content"
                    android:id="@+id/textInputSlot"
                    android:text="Parking Slot "


            />

                <TextView
                        style="@style/ContentTextStyle"
                        app:layout_constraintTop_toBottomOf="@id/textInputSlot"
                        app:layout_constraintStart_toStartOf="@id/textInputSlot"
                        android:gravity="center_horizontal"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/editTextSlot"
                        android:text="__"

                />

            <TextView
                    app:layout_constraintTop_toTopOf="@id/textInputSlot"
                    style="@style/TagTextViewStyle"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/guideline"
                    android:layout_width="wrap_content"
                    android:text="Entry Time"

                    android:id="@+id/textInputEntryTime"
            />
                <TextView
                        app:layout_constraintStart_toStartOf="@id/textInputEntryTime"
                        app:layout_constraintEnd_toEndOf="@id/textInputEntryTime"
                        android:layout_width="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/textInputEntryTime"
                        style="@style/ContentTextStyle"
                        android:text="12/03/134"
                        android:id="@+id/editTextEntryTime"
                />
            <TextView
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/editTextEntryTime"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    style="@style/TagTextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Hourly Charge"
                    android:id="@+id/textInputHourlyCharge"
            />
                <TextView
                        android:gravity="center"
                        android:layout_width="match_parent"
                        app:layout_constraintTop_toBottomOf="@id/textInputHourlyCharge"
                        style="@style/ContentTextStyle"
                        android:id="@+id/editTextHourlyCharge"
                        android:text="Hourly Charge"
                />

            <LinearLayout
                    android:baselineAligned="false"
                    android:layout_width="match_parent"
                    android:id="@+id/card1"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/editTextHourlyCharge"
                    android:visibility="visible"
                    style="@style/CardEntryScreen"
            >


                    <com.tomlonghurst.expandablehinttext.ExpandableHintText
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:inputType="textCapCharacters"
                            android:id="@+id/editTextNumber"
                            android:hint="Vehicle number"
                            app:textBoxColor="@color/colorPrimaryDark"
                            app:floatingLabelColor="@color/colorPrimaryDark"
                            app:imageColor="@color/colorPrimary"
                            app:image="@drawable/ic_car_blue"
                            android:textColor="@color/white"


                    />
                <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputModel"
                        android:hint="Vehicle Model"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <AutoCompleteTextView

                            style="@style/GeneralEditTextStyle"
                            android:drawableStart="@drawable/ic_suv_car"
                            android:id="@+id/editTextModel"
                    />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                    android:baselineAligned="false"
                    android:id="@+id/card2"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/card1"
                    android:layout_width="match_parent"
                    android:visibility="visible"
                    style="@style/CardEntryScreen"
            >
                <com.google.android.material.textfield.TextInputLayout
                        android:layout_weight="1"
                        android:id="@+id/textInputName"
                        android:hint="Customer Name"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">
                    <com.google.android.material.textfield.TextInputEditText
                            style="@style/GeneralEditTextStyle"
                            android:drawableStart="@drawable/ic_person"
                            android:inputType="textCapSentences"
                            android:id="@+id/editTextName"
                    />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout

                        android:layout_weight="1"
                        android:id="@+id/textInputPhone"
                        android:hint="Phone Number"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">
                    <com.google.android.material.textfield.TextInputEditText
                            style="@style/GeneralEditTextStyle"

                            android:drawableStart="@drawable/ic_phone"

                            android:inputType="phone"
                            android:id="@+id/editTextPhone"
                    />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>



    <include layout="@layout/progress" android:visibility="gone"/>
    
    <Button
                    app:layout_constraintTop_toBottomOf="@id/card2"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:visibility="visible"
                    android:layout_gravity="center_horizontal"
                    android:tint="@color/white"
                    android:src="@drawable/ic_print"
                    android:id="@+id/buttonSubmit"
                    android:textColorHint="@color/white"
                    android:background="@color/colorAccent"
                    android:hint="Submit"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"/>


















</androidx.constraintlayout.widget.ConstraintLayout>