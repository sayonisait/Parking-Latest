<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="20dp"
              android:gravity="center"
>
    
    <androidx.cardview.widget.CardView android:layout_width="match_parent"
                                       android:layout_height="wrap_content"
                                       app:cardElevation="5dp"
    >
        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
        android:orientation="vertical"
                      android:padding="20dp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputLayout
                    app:layout_constraintVertical_bias="0"
                    app:layout_constraintStart_toStartOf="@id/textInputCustomerName"
                    app:layout_constraintTop_toBottomOf="@id/textInputCustomerName"
                    app:layout_constraintBottom_toBottomOf="parent"

                    android:id="@+id/textInputNumber"
                    android:hint="Vehicle Number"
                    app:layout_constraintWidth_percent=".45"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="@id/textInputCustomerName">

                <com.google.android.material.textfield.TextInputEditText
                        android:backgroundTint="@color/colorPrimaryDark"

                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:id="@+id/editTextNumber"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                    app:layout_constraintStart_toStartOf="@id/textInputPhone"
                    app:layout_constraintTop_toTopOf="@id/textInputNumber"
                    app:layout_constraintBottom_toBottomOf="@id/textInputNumber"
                    android:id="@+id/textInputModel"
                    android:hint="Vehicle Model"
                    android:layout_width="0dp"
                    app:layout_constraintHorizontal_bias="1"
                    app:layout_constraintEnd_toEndOf="@id/textInputPhone"
                    android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                        android:backgroundTint="@color/colorPrimaryDark"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:id="@+id/editTextModel"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                    app:layout_constraintVertical_bias="0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:id="@+id/textInputCustomerName"
                    android:hint="Name"
                    app:layout_constraintWidth_percent=".45"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                        android:backgroundTint="@color/colorPrimaryDark"

                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:id="@+id/editTextCusName"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                    app:layout_constraintVertical_bias="0"
                    app:layout_constraintStart_toStartOf="@id/textInputCustomerName"
                    app:layout_constraintTop_toBottomOf="@id/textInputNumber"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:id="@+id/textInputStartDate"
                    android:hint="Start Date"
                    app:layout_constraintWidth_percent=".45"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintEnd_toEndOf="@id/textInputCustomerName">

                <com.google.android.material.textfield.TextInputEditText
                        android:backgroundTint="@color/colorPrimaryDark"

                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:id="@+id/editTextStartDate"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/textInputCustomerName"
                    app:layout_constraintBottom_toBottomOf="@id/textInputCustomerName"
                    android:id="@+id/textInputPhone"
                    android:hint="Phone Number"
                    app:layout_constraintWidth_percent=".45"
                    android:layout_width="0dp"
                    app:layout_constraintHorizontal_bias="1"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                        android:backgroundTint="@color/colorPrimaryDark"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:id="@+id/editTextPhone"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                    app:layout_constraintStart_toStartOf="@id/textInputPhone"
                    app:layout_constraintTop_toTopOf="@id/textInputStartDate"
                    app:layout_constraintBottom_toBottomOf="@id/textInputStartDate"
                    android:id="@+id/textInputEndDate"
                    android:hint="End Date"
                    android:layout_width="0dp"
                    app:layout_constraintHorizontal_bias="1"
                    app:layout_constraintEnd_toEndOf="@id/textInputPhone"
                    android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                        android:backgroundTint="@color/colorPrimaryDark"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:id="@+id/editTextEndDate"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
            </com.google.android.material.textfield.TextInputLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputLayout
                    app:layout_constraintVertical_bias="0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/textInputExitime"
                    app:layout_constraintBottom_toBottomOf="@id/textInputEntryTime"

                    android:id="@+id/textInputSlot"
                    android:hint="Slot "
                    app:layout_constraintWidth_percent=".3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintHorizontal_bias="0">

                <com.google.android.material.textfield.TextInputEditText
                        android:backgroundTint="@color/colorPrimaryDark"
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:id="@+id/editTextSlot"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:drawableEnd="@drawable/ic_map"
                />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                    app:layout_constraintStart_toEndOf="@id/textInputSlot"
                    app:layout_constraintTop_toTopOf="@id/textInputSlot"
                    app:layout_constraintBottom_toBottomOf="@id/textInputSlot"
                    app:layout_constraintEnd_toStartOf="@id/textInputExitime"
                    android:hint="Entry Time"
                    android:id="@+id/textInputEntryTime"
                    app:layout_constraintWidth_percent=".3"
                    android:layout_width="0dp"
                    app:layout_constraintHorizontal_bias=".5"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                        android:focusable="false"

                        android:backgroundTint="@color/colorPrimaryDark"
                        android:id="@+id/editTextEntryTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="10"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/textInputSlot"
                    app:layout_constraintBottom_toBottomOf="@id/textInputSlot"

                    android:id="@+id/textInputExitime"
                    android:hint="Exit Time"
                    app:layout_constraintWidth_percent=".3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1">

                <com.google.android.material.textfield.TextInputEditText
                        android:backgroundTint="@color/colorPrimaryDark"
                        android:focusable="false"
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:id="@+id/editExitTime"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                    app:layout_constraintVertical_bias="0"
                    app:layout_constraintStart_toEndOf="@id/textInputHours"
                    app:layout_constraintTop_toBottomOf="@id/textInputEntryTime"
                    app:layout_constraintBottom_toBottomOf="parent"

                    android:id="@+id/textInputHours"
                    android:hint="Hours "
                    app:layout_constraintWidth_percent=".3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"

                    app:layout_constraintHorizontal_bias="0">

                <com.google.android.material.textfield.TextInputEditText
                        android:backgroundTint="@color/colorPrimaryDark"
                        android:layout_width="match_parent"
                        android:focusable="false"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:id="@+id/editTextHours"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                />
            </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                        app:layout_constraintStart_toEndOf="@id/textInputSlot"
                        app:layout_constraintTop_toTopOf="@id/textInputHours"
                        app:layout_constraintBottom_toBottomOf="@id/textInputHours"
                        app:layout_constraintEnd_toStartOf="@id/textInputExitime"
                        android:hint="Charge/Hr"
                        android:id="@+id/textInputCharge"
                        app:layout_constraintWidth_percent=".3"
                        android:layout_width="0dp"
                        app:layout_constraintHorizontal_bias=".5"

                        android:layout_height="0dp">
                    <com.google.android.material.textfield.TextInputEditText
                            android:backgroundTint="@color/colorPrimaryDark"
                            android:id="@+id/editTextCharge"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:ems="10"
                            android:focusable="false"
                           />
                </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/textInputHours"
                    app:layout_constraintBottom_toBottomOf="@id/textInputHours"

                    android:id="@+id/textInputAmountCalculated"
                    android:hint="Amount Calculated"
                    app:layout_constraintWidth_percent=".3"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1">

                <com.google.android.material.textfield.TextInputEditText
                        android:backgroundTint="@color/colorPrimaryDark"
                        android:focusable="false"
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:id="@+id/editTextAmountCalculated"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                />
            </com.google.android.material.textfield.TextInputLayout>



            <com.google.android.material.textfield.TextInputLayout
                    app:layout_constraintVertical_bias="0"
                    app:layout_constraintStart_toStartOf="@id/textInputHours"
                    app:layout_constraintTop_toBottomOf="@id/textInputHours"
                    app:layout_constraintBottom_toBottomOf="parent"

                    android:id="@+id/textInputEstHours"
                    android:hint="Est Hours "
                    app:layout_constraintWidth_percent=".3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"

                    app:layout_constraintHorizontal_bias="0">

                <com.google.android.material.textfield.TextInputEditText
                        android:backgroundTint="@color/colorPrimaryDark"
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:id="@+id/editTextEstHours"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                    app:layout_constraintStart_toEndOf="@id/textInputSlot"
                    app:layout_constraintTop_toTopOf="@id/textInputEstHours"
                    app:layout_constraintBottom_toBottomOf="@id/textInputEstHours"
                    app:layout_constraintEnd_toStartOf="@id/textInputEstAmount"
                    android:hint="Special Charge"
                    android:id="@+id/textInputSpecialCharge"
                    app:layout_constraintWidth_percent=".3"
                    android:layout_width="0dp"
                    app:layout_constraintHorizontal_bias=".5"

                    android:layout_height="0dp">
                <com.google.android.material.textfield.TextInputEditText
                        android:backgroundTint="@color/colorPrimaryDark"
                        android:id="@+id/editTextSpecialCharge"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="10"
                />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/textInputEstHours"
                    app:layout_constraintBottom_toBottomOf="@id/textInputEstHours"

                    android:id="@+id/textInputEstAmount"
                    android:hint="Est Amount"
                    app:layout_constraintWidth_percent=".3"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1">

                <com.google.android.material.textfield.TextInputEditText
                        android:backgroundTint="@color/colorPrimaryDark"
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:id="@+id/editTextEstAmount"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textInputEstHours"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:hint="Amount to be paid"
                    android:id="@+id/textInputAmount"
                    android:layout_width="0dp"

                    app:layout_constraintHorizontal_bias=".5"

                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                        android:backgroundTint="@color/colorPrimaryDark"
                        android:id="@+id/editTextAmount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="10"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
            </com.google.android.material.textfield.TextInputLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <Button
                android:id="@+id/buttonSubmit"
                android:layout_marginTop="20dp"
                android:textColorHint="@color/white"
                android:background="@color/colorAccent"
                android:hint="Submit"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>