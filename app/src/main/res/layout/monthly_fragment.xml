<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
<data>
    <variable name="subscription" type="com.example.parking.model.MonthlyCustomer"/>
    <variable name="vehicle" type="com.example.parking.model.Vehicle"/>

</data>
<ScrollView  android:layout_width="match_parent" android:layout_height="wrap_content"

          >

    <androidx.cardview.widget.CardView
            android:layout_marginTop="35dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            >
        <LinearLayout
                android:padding="20dp"
                android:orientation="vertical"

                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputLayout

                    android:layout_weight="1"
                    android:id="@+id/textInputCustomerName"
                    android:hint="Customer Name"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                <com.google.android.material.textfield.TextInputEditText
                        android:backgroundTint="@color/colorPrimaryDark"
                        android:text="@={subscription.company}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textCapSentences"
                        android:ems="10"
                        android:id="@+id/editTextName"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout

                    android:layout_weight="1"
                    android:id="@+id/textInputPhone"
                    android:hint="Phone Number"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                <com.google.android.material.textfield.TextInputEditText
                        android:backgroundTint="@color/colorPrimaryDark"
                        android:text="@={subscription.phone}"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="phone"
                        android:ems="10"
                        android:id="@+id/editTextPhone"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout

                    android:layout_weight="1"
                    android:id="@+id/textInputSecondary"
                    android:hint="Secondary Phone Number"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                <com.google.android.material.textfield.TextInputEditText
                        android:backgroundTint="@color/colorPrimaryDark"
                        android:text="@{subscription.secondaryNumber}"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="phone"
                        android:ems="10"
                        android:id="@+id/editTextSecondary"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                    android:layout_weight="1"
                    android:id="@+id/textInputCompany"
                    android:hint="Company Name"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                <com.google.android.material.textfield.TextInputEditText
                        android:text="@={subscription.company}"

                        android:backgroundTint="@color/colorPrimaryDark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textCapSentences"
                        android:ems="10"
                        android:id="@+id/editTextCompany"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                    android:layout_weight="1"
                    android:id="@+id/textInputMake"
                    android:hint="Vehicle Make"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                <com.google.android.material.textfield.TextInputEditText
                        android:text="@={vehicle.vehicleMake}"

                        android:backgroundTint="@color/colorPrimaryDark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textCapSentences"
                        android:ems="10"
                        android:id="@+id/editTextVehicleMake"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout

                    android:layout_weight="1"
                    android:id="@+id/textInputNumber"
                    android:hint="Vehicle Number"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                <com.google.android.material.textfield.TextInputEditText
                        android:backgroundTint="@color/colorPrimaryDark"
                        android:text="@={vehicle.vehicleNumber}"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textCapSentences"
                        android:ems="10"
                        android:id="@+id/editTextNumber"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                    android:layout_weight="1"
                    android:id="@+id/textInputModel"

                    android:hint="Vehicle Model"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                <AutoCompleteTextView
                        android:backgroundTint="@color/colorPrimaryDark"
                        android:text="@={vehicle.vehicleModel}"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:id="@+id/editTextModel"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                    android:layout_weight="1"

                    android:hint="Start Date"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                <com.google.android.material.textfield.TextInputEditText
                        android:backgroundTint="@color/colorPrimaryDark"
                        android:text="@{subscription.getAppStartDate()}"

                        android:clickable="true"
                        android:focusable="false"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:id="@+id/editTextStartDate"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                    android:layout_weight="1"

                    android:hint="End Date"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                <com.google.android.material.textfield.TextInputEditText
                        android:text="@{subscription.getAppEndDate()}"

                        android:backgroundTint="@color/colorPrimaryDark"
                        android:focusable="false"
                        android:clickable="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:id="@+id/editEndDate"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                    android:layout_weight="1"
                    android:hint="Amount"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                <com.google.android.material.textfield.TextInputEditText

                        android:backgroundTint="@color/colorPrimaryDark"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:id="@+id/editAmount"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
            </com.google.android.material.textfield.TextInputLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp" android:layout_weight="1"
                    android:id="@+id/linearLayout"
                    >
                <com.google.android.material.textfield.TextInputLayout
                        android:hint="Grace Period"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:id="@+id/textInputLayout"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/checkBox"
                        app:layout_constraintBottom_toBottomOf="parent">
                    <com.google.android.material.textfield.TextInputEditText
                            android:text="@{(subscription.gracePeriodDays>0)?`` + subscription.gracePeriodDays:``}"
                            android:backgroundTint="@color/colorPrimaryDark"


                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="phone"
                            android:ems="10"
                            android:id="@+id/editGracePeriod"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                    />
                </com.google.android.material.textfield.TextInputLayout>
                <CheckBox
                        android:checked="@={subscription.isNotPaid}"

                        android:layout_width="wrap_content" android:buttonTint="@color/colorAccent"
                       android:backgroundTint="@color/colorAccent"
                        android:layout_height="wrap_content"
                        android:text="Not Paid"
                        android:id="@+id/checkBox" app:layout_constraintStart_toEndOf="@+id/textInputLayout"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/textInputLayout"
                        app:layout_constraintBottom_toBottomOf="@+id/textInputLayout" android:layout_marginEnd="9dp"
                        android:layout_marginRight="9dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <Button
                    android:id="@+id/buttonSubmit"
                    android:layout_marginTop="20dp"
                    android:textColorHint="@color/white"
                    android:background="@color/colorAccent"
                    android:hint="Submit"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</ScrollView>
</layout>
