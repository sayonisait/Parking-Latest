<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:background="@color/white"
        android:elevation="10dp"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="500dp"
        tools:context=".ui.vehicleentry.fragments.ParkedListFragment"
        xmlns:app="http://schemas.android.com/apk/res-auto">



    <EditText

            android:background="@drawable/rounded_border"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:drawableEnd="@drawable/ic_search"
            android:drawableTint="@color/colorAccent"

            android:id="@+id/edit_query"
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Search vehicle number"/>

    <LinearLayout android:background="@color/colorAccent" android:paddingTop="10dp" android:paddingBottom="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textColor="@color/white" android:layout_width="0dp" android:layout_height="wrap_content"
        android:text="Vehicle No." android:layout_weight="1" android:gravity="center"/>
        <TextView android:visibility="gone" android:textColor="@color/white" android:layout_width="0dp" android:layout_height="wrap_content"
                  android:text="Phone Number" android:layout_weight="1" android:gravity="center"/>
        <TextView android:textColor="@color/white" android:layout_width="0dp" android:layout_height="wrap_content"
                  android:text="Slot " android:layout_weight=".5" android:gravity="center"/>
        <TextView android:textColor="@color/white" android:layout_width="0dp" android:layout_height="wrap_content"
                  android:text="Entry Time" android:layout_weight="1.5" android:gravity="center"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>